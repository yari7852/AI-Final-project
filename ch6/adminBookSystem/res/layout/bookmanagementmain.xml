<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:background="#ffffcc"
  >
  <FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="40dip"
    android:background="@drawable/title"
   >
    <TextView
    	android:text="深南大學圖書管理系統"
    	android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="0dip"
		android:layout_marginBottom="0dip"
		android:layout_marginLeft="0dip"
		android:textSize="20dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:gravity="center"
		android:id="@+id/bookmanagementtitle"
    >
    </TextView> 
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" 	
    	android:gravity="center_vertical|right"   	
    >    
	    <ImageButton 
			android:id="@+id/ImageButtonbookmanagement01" 
			android:background="@drawable/next_button"
			android:layout_width="40dip" 
			android:layout_height="30dip"
			android:layout_marginTop="0dip"
			android:layout_marginRight="15dip"
		>
		</ImageButton>
    </LinearLayout>
   </FrameLayout>
   <LinearLayout
	    	android:orientation="horizontal"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="7dip"
	    	android:layout_marginRight="7dip"
	    	android:layout_marginTop="4dip"
	    	android:layout_marginBottom="4dip"
	    	android:gravity="center"
	    	android:background="@drawable/navigator"
	    >
	    <TextView
	    	android:text="主菜單" 
	    	android:gravity="center"
	    	android:textSize="18dip"
	    	android:layout_width="100dip" 
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dip"
			android:textColor="#FFFFFF"
			android:textStyle="bold"
			
		>
		</TextView>
		<TextView
			android:text="圖書管理"
			android:gravity="center"
			android:layout_height="wrap_content"
			android:layout_width="100dip"
			android:textSize="18dip"
			android:layout_marginRight="10dip"
			android:textColor="#FFFFFF"
			android:textStyle="bold"
			android:background="@drawable/hilight"
		>
		</TextView>
	</LinearLayout>
      <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dip"
        android:layout_marginRight="7dip"
        android:layout_marginTop="4dip"
        android:layout_marginBottom="4dip"
        android:gravity="center"
       
        >
        <RadioGroup 
        android:id="@+id/RadioGroup01" 
        android:orientation="horizontal"        
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        
        >
	      <RadioButton 
	         android:text="圖書查詢" 
	         android:id="@+id/radiobuttonbookmanagement_selectbook" 
             android:layout_width="wrap_content" 
	         android:layout_height="wrap_content"
	         android:textColor="#000000"
	         android:checked="true"
	         >
	         
	      </RadioButton>   
	      <RadioButton 	         
	         android:text="圖書入庫" 
	         android:id="@+id/radiobuttonbookmanagerment_insertbook" 	       
	         android:textColor="#000000"
	         android:layout_width="wrap_content" 
	         android:layout_height="wrap_content">
	      </RadioButton>  
	  </RadioGroup>
    </LinearLayout>
	<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffcc66"

    >
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/bookmanagement_selectbooklinearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dip"
	    android:layout_marginRight="7dip"
        >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dip"
	     android:layout_marginRight="7dip"

        >
        <TextView
		android:text="ISBN:" 
		android:textColor="#222222"
		android:layout_width="wrap_content"
		android:layout_height="20dip"
		android:textSize="18dip"
		android:gravity="center_vertical"
	   />
	   <EditText
             android:text="9787302164289"
             android:id="@+id/bookmanagementisbnedit"
             android:textColor="#222222"
             android:layout_width="170dip"
             android:layout_height="38dip"
             android:textSize="16dip"
        >
        </EditText>
         <Button
          android:text="查找圖書"
          android:layout_width="80dip"
          android:layout_height="40dip"              
          android:id="@+id/buttonbookmanagement_selectbook"
        />    
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/bookmanagement_insertbooklinearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
     >
        </LinearLayout>
    </FrameLayout>
  <com.bn.lb.admin.GGView
       android:layout_width="fill_parent" 
       android:layout_height="fill_parent" 
         android:layout_marginLeft="7dip"
      android:layout_marginRight="7dip"
    />   
</LinearLayout>
