<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#ffffcc"
  android:orientation="vertical"
 >
   <FrameLayout
       android:layout_width="fill_parent"
       android:layout_height="40dip"
       android:background="@drawable/title"
   >
    <TextView
    	android:text="深南大學圖書管理系統"
    	android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="0dip"
		android:layout_marginBottom="0dip"
		android:layout_marginLeft="0dip"
		android:textSize="20dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:gravity="center"
    >
    </TextView> 
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" 	
    	android:gravity="center_vertical|right"   	
    >    
	    <ImageButton 
			android:id="@+id/ImageButtonyuyuedetails" 
			android:background="@drawable/next_button"
			android:layout_width="40dip" 
			android:layout_height="30dip"
			android:layout_marginTop="0dip"
			android:layout_marginRight="15dip"
		>
		</ImageButton>
    </LinearLayout>
   </FrameLayout>
   <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_marginLeft="7dip"
      android:layout_marginRight="7dip"
      android:layout_marginTop="4dip"
      android:layout_marginBottom="4dip"
      android:background="@drawable/navigator"
    >      
      <TextView
         android:text="查詢"
         android:layout_height="wrap_content"
         android:layout_width="100dip" 
         android:id="@+id/query"
         android:textSize="18dip"
		 android:layout_marginLeft="10dip"
		 android:textColor="#FFFFFF"
		 android:gravity="center"		 
       />
       <TextView
         android:text="掛失"
         android:layout_width="100dip"
         android:layout_height="wrap_content"
         android:id="@+id/lose"
         android:textSize="18dip"
         android:gravity="center"
         android:textColor="#FFFFFF"
        />
        <TextView
         android:text="預約"
         android:layout_width="100dip"
         android:layout_height="wrap_content"
         android:id="@+id/yuyue"
         android:textSize="18dip"
         android:gravity="center"
         android:textColor="#FFFFFF"
         android:background="@drawable/hilight"
        />
    </LinearLayout>
    <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"         
         android:layout_marginTop="5dip"
          android:background="#ffffcc"
                        android:layout_marginLeft="7dip"
      android:layout_marginRight="7dip"
     >
         <TextView
            android:text="書名:"
            android:textSize="17dip"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         ></TextView>
       <TextView
           
            android:textSize="17dip"
            android:textColor="#000000"
            android:id="@+id/yuyuebooknametextview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
         ></TextView>
     </LinearLayout>
     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"         
         android:layout_marginTop="5dip"
          android:background="#ffffcc"
                        android:layout_marginLeft="7dip"
      android:layout_marginRight="7dip"
     >
         <TextView
            android:text="作者:"
            android:textSize="17dip"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         ></TextView>
       <TextView
            
            android:textSize="17dip"
            android:textColor="#000000"
            android:id="@+id/yuyuebookauthortextview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
         ></TextView>
     </LinearLayout>
        <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"         
         android:layout_marginTop="5dip"
                       android:layout_marginLeft="7dip"
      android:layout_marginRight="7dip"
     >
         <TextView
            android:text="出版社:"
            android:textSize="17dip"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         ></TextView>
       <TextView
           
            android:textSize="17dip"
            android:textColor="#000000"
            android:id="@+id/yuyuebookpresstextview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
         ></TextView>
     </LinearLayout>
       <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"         
         android:layout_marginTop="5dip"
          android:background="#ffffcc"
                        android:layout_marginLeft="7dip"
      android:layout_marginRight="7dip"
     >
         <TextView
            android:text="已借閱:"
            android:textSize="17dip"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         ></TextView>
       <TextView
           
            android:textSize="17dip"
            android:textColor="#000000"
            android:id="@+id/yuyuebookborrowtextview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
         ></TextView>
     </LinearLayout>
       <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"         
         android:layout_marginTop="5dip"
          android:background="#ffffcc"
                        android:layout_marginLeft="7dip"
      android:layout_marginRight="7dip"
     >
         <TextView
            android:text="已預約:"
            android:textSize="17dip"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         ></TextView>
       <TextView
           
            android:textSize="17dip"
            android:textColor="#000000"
            android:id="@+id/yuyuebookordertextview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
         ></TextView>
     </LinearLayout>
       <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"         
         android:layout_marginTop="5dip"
          android:background="#ffffcc"
                        android:layout_marginLeft="7dip"
      android:layout_marginRight="7dip"
     >
         <TextView
            android:text="請輸入您的學號:"
            android:textSize="17dip"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
         ></TextView>
        <EditText
            android:id="@+id/yuyuestunumber"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:textColor="#000000"
            android:textSize="16dip"
        ></EditText>
     </LinearLayout>
     <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffcc"
        android:gravity="right"
                      android:layout_marginLeft="7dip"
      android:layout_marginRight="7dip"
     >
        <Button
          android:text="借閱"
          android:layout_width="80dip"
          android:layout_height="40dip"
          android:id="@+id/borrowbook"
        /> 
          <Button
          android:text="預約"
          android:layout_width="80dip"
          android:layout_height="40dip"
          android:id="@+id/orderbook"
        />  
        </LinearLayout>
</LinearLayout>
