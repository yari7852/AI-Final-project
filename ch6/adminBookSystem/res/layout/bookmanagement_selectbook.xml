<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#ffffcc"
>
<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="40dip"
    android:background="@drawable/title"
   >
    <TextView
    	android:text="深南大學圖書管理系統"
    	android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="0dip"
		android:layout_marginBottom="0dip"
		android:layout_marginLeft="0dip"
		android:textSize="20dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:gravity="center"
		android:id="@+id/bookmanagementtitle"
    >
    </TextView> 
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" 	
    	android:gravity="center_vertical|right"   	
    >    
	    <ImageButton 
			android:id="@+id/ImageButtonbookmanagement03" 
			android:background="@drawable/next_button"
			android:layout_width="40dip" 
			android:layout_height="30dip"
			android:layout_marginTop="0dip"
			android:layout_marginRight="15dip"
		>
		</ImageButton>
    </LinearLayout>
   </FrameLayout>
   <LinearLayout
	    	android:orientation="horizontal"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="7dip"
	    	android:layout_marginRight="7dip"
	    	android:layout_marginTop="4dip"
	    	android:layout_marginBottom="4dip"
	    	android:gravity="center"
	    	android:background="@drawable/navigator"
	    >
	    <TextView
	    	android:text="圖書管理" 
	    	android:gravity="center"
	    	android:textSize="18dip"
	    	android:layout_width="100dip" 
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dip"
			android:textColor="#FFFFFF"
			android:textStyle="bold"
			
		>
		</TextView>
		<TextView
			android:text="查詢信息"
			android:gravity="center"
			android:layout_height="wrap_content"
			android:layout_width="100dip"
			android:textSize="18dip"
			android:layout_marginRight="10dip"
			android:textColor="#FFFFFF"
			android:textStyle="bold"
			android:background="@drawable/hilight"
		>
		</TextView>
	</LinearLayout>
   
   <LinearLayout
       android:orientation="vertical"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background="#ffcc66"
       android:layout_marginLeft="7dip"
	   android:layout_marginRight="7dip"
	   android:layout_marginTop="4dip"
	   android:layout_marginBottom="4dip"
       >
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
          >
             <TextView
                android:text="ISBN"
                android:textSize="15dip"
                android:textColor="#000000"
                android:layout_width="43dip"
                android:layout_height="wrap_content"
                android:paddingLeft="0dip"
             />
             <TextView
                android:id="@+id/bookmanagementselect_bookisbnTextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:textColor="#000000"
             ></TextView>
             <TextView
                android:text="購買日期"
                android:textSize="15dip"
                android:paddingLeft="10dip"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              ></TextView>
              <TextView
                android:textSize="14dip"
                android:id="@+id/bookmanagementselect_buytimeTextView02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
              ></TextView>
         </LinearLayout> 
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
           >
              <TextView
                 android:text="書名"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingLeft="0dip"
                 android:textSize="15dip"
                 android:textColor="#000000"
               ></TextView>
               <TextView
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:textSize="14dip"
                 android:textColor="#000000"
                 android:id="@+id/bookmanagementselect_booknameTextView03"
                 android:paddingLeft="5dip"
               ></TextView>
           </LinearLayout> 
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
           >
              <TextView
                 android:text="作者"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingLeft="0dip"
                 android:textSize="15dip"
                 android:textColor="#000000"
               ></TextView>
               <TextView
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:textSize="14dip"
                 android:textColor="#000000"
                 android:id="@+id/bookmanagementselect_bookauthorTextView04"
                 android:paddingLeft="5dip"
               ></TextView>
           </LinearLayout> 
           <LinearLayout
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
           >
              <TextView
                 android:text="出版社"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingLeft="0dip"
                 android:textSize="15dip"
                 android:textColor="#000000"
               ></TextView>
               <TextView
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:textSize="14dip"
                 android:textColor="#000000"
                 android:id="@+id/bookmanagementselect_bookpressTextView05"
                 android:paddingLeft="5dip"
               ></TextView>
           </LinearLayout>            
           <LinearLayout
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"              
            >
               
                <TextView
                    android:text="本書簡介："
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dip"                      
                    android:textColor="#000000" 
                 ></TextView> 
                 <TextView
                    android:textSize="14dip"
                    android:textColor="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bookmanagementselect_bookintroductionTextView06"
                 ></TextView>
              </LinearLayout>
               <LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffcc66"
	     android:gravity="right"    
	    android:layout_marginLeft="7dip"
	    	android:layout_marginRight="7dip"

	    >
	    
         <Button
          android:text="修改"
          android:layout_width="80dip"
          android:layout_height="40dip"        
          android:id="@+id/mofidybookbok"
        /> 
   </LinearLayout>      
           </LinearLayout>                         
              <LinearLayout
                 android:orientation="horizontal"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"  
                 android:gravity="center"
                android:layout_marginLeft="7dip"
	            android:layout_marginRight="7dip"
	            android:layout_marginTop="4dip"
	            android:layout_marginBottom="4dip"  
              >
            <TextView
               android:text="書號"
               android:layout_width="100px"
               android:layout_height="wrap_content"      
               android:textSize="14dip"
               android:paddingLeft="5dip"            
               android:textColor="#000000">
            </TextView>                   
            <TextView
               android:text="是否借閱"
               android:layout_width="100px"
               android:layout_height="wrap_content"
               android:textSize="14dip"                 
                android:paddingLeft="5dip"
               android:textColor="#000000">
            </TextView>
            <TextView
               android:text="是否預約"
               android:layout_width="100px"
               android:layout_height="wrap_content"
               android:textSize="14dip"                 
                android:paddingLeft="5dip"
               android:textColor="#000000">
            </TextView> 
                                    
       </LinearLayout>       
 <LinearLayout
       android:orientation="vertical"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background="#ffcc66"     
       android:id="@+id/gridviewLinearlayout"  
              android:layout_marginLeft="7dip"
	   android:layout_marginRight="7dip"
	   android:layout_marginTop="4dip"
	   android:layout_marginBottom="4dip"
       >
                      
          <GridView 
              android:id="@+id/GridView01" 
              android:layout_width="fill_parent" 
              android:layout_height="fill_parent"
              android:verticalSpacing="5dip"
              android:horizontalSpacing="5dip"
              android:stretchMode="columnWidth"              
          ></GridView>         
       </LinearLayout>
</LinearLayout>
