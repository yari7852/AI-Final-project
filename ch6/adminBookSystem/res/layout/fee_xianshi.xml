<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#ffffcc"
  >
 <FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="40dip"
    android:background="@drawable/title"
   >
    <TextView
    	android:text="深南大學圖書管理系統"
    	android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="0dip"
		android:layout_marginBottom="0dip"
		android:layout_marginLeft="0dip"
		android:textSize="20dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:gravity="center"
		android:id="@+id/feetitle"
    >
    </TextView> 
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" 	
    	android:gravity="center_vertical|right"   	
    >    
	    <ImageButton 
			android:id="@+id/ImageButtonfee2" 
			android:background="@drawable/next_button"
			android:layout_width="40dip" 
			android:layout_height="30dip"
			android:layout_marginTop="0dip"
			android:layout_marginRight="15dip"
		>
		</ImageButton>
    </LinearLayout>
   </FrameLayout>>
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="7dip"
    	android:layout_marginRight="7dip"
    	android:layout_marginTop="4dip"
    	android:layout_marginBottom="4dip"
    	android:gravity="center"
    	android:background="@drawable/navigator"
    >
    <TextView
    	android:text="查詢結果" 
    	android:gravity="center"
    	android:textSize="18dip"
    	android:layout_width="100dip" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		
		android:id="@+id/feemain"
	>
	</TextView>
	<TextView
		android:text="交費"
		android:gravity="center"
		android:layout_height="wrap_content"
		android:layout_width="100dip"
		android:textSize="18dip"
		android:layout_marginRight="10dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:background="@drawable/hilight"
		android:id="@+id/fee"
	>
	</TextView>
    </LinearLayout>
    <LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffcc66"
	       android:layout_marginLeft="7dip"
    	android:layout_marginRight="7dip"
	> 
    <TextView 
		android:text="學號：" 
		android:id="@+id/feestunumber_xianshi01" 
		android:textColor="#222222"
		android:layout_width="wrap_content" 
		android:layout_height="20dip"
		android:layout_marginLeft="7dip"
		android:textSize="18dip"
	>
	</TextView>
   <TextView 
		android:text="" 
		android:id="@+id/feebstunumber_xianshi02" 
		android:textColor="#222222"
		android:layout_width="wrap_content" 
		android:layout_height="20dip"
		android:layout_marginLeft="7dip"
		android:textSize="18dip"
	>
	</TextView>
	</LinearLayout>
    <LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffcc66"
	       android:layout_marginLeft="7dip"
    	android:layout_marginRight="7dip"
	> 
    <TextView 
		android:text="書號：" 
		android:id="@+id/feebooknumber_xianshi01" 
		android:textColor="#222222"
		android:layout_width="wrap_content" 
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
	>
	</TextView>
   <TextView 
		android:text="" 
		android:id="@+id/feebooknumber_xianshi02" 
		android:textColor="#222222"
		android:layout_width="wrap_content" 
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
	>
	</TextView>
	</LinearLayout>
	 <LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffcc66"
	    android:layout_marginLeft="7dip"
    	android:layout_marginRight="7dip"
	> 
    <TextView 
		android:text="書名：" 
		android:id="@+id/feebookname_xianshi01" 
		android:textColor="#222222"
		android:layout_width="wrap_content" 
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
	>
	</TextView>
   <TextView 
		android:text="" 
		android:id="@+id/feebookname_xianshi02" 
		android:textColor="#222222"
		android:layout_width="wrap_content" 
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
	>
	</TextView>
	</LinearLayout>
	 <LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffcc66"
	    android:layout_marginLeft="7dip"
    	android:layout_marginRight="7dip"
	> 
    <TextView 
		android:text="超期：" 
		android:id="@+id/feebookdelaytime_xianshi01" 
		android:textColor="#222222"
		android:layout_width="wrap_content" 
		android:layout_height="20dip"		   
		android:textSize="18dip"
	>
	</TextView>
   <TextView 
		android:text="" 
		android:id="@+id/feedelaytime_xianshi02" 
		android:textColor="#222222"
		android:layout_width="wrap_content" 
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
	>
	</TextView>
	</LinearLayout>
	 <LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffcc66"
	       android:layout_marginLeft="7dip"
    	android:layout_marginRight="7dip"
	> 
    <TextView 
		android:text="應交費用：" 
		android:id="@+id/feebookjiaofeie_xianshi01" 
		android:textColor="#222222"
		android:layout_width="wrap_content" 
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
	>
	</TextView>
   <TextView 
		android:text="" 
		android:id="@+id/feejiaofei_xianshi02" 
		android:textColor="#222222"
		android:layout_width="wrap_content" 
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
	>
	</TextView>
	</LinearLayout>
	<LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffcc66"
	    android:gravity="right"
	    android:layout_marginLeft="7dip"
    	android:layout_marginRight="7dip"
	    >
	    <Button 
	  android:text="交費" 
	  android:id="@+id/feemoney" 
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content">
	 </Button>
	</LinearLayout>
</LinearLayout>
