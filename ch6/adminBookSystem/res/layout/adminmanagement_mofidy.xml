<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#ffffcc"
  >
   <FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="40dip"
    android:background="@drawable/title"
   >
    <TextView
    	android:text="深南大學圖書管理系統"
    	android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="0dip"
		android:layout_marginBottom="0dip"
		android:layout_marginLeft="0dip"
		android:textSize="20dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:gravity="center"
    >
    </TextView> 
     <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" 	
    	android:gravity="center_vertical|right"   	
    >    
	    <ImageButton 
			android:id="@+id/ImageButtonadminmanagement_mofidy" 
			android:background="@drawable/next_button"
			android:layout_width="40dip" 
			android:layout_height="30dip"
			android:layout_marginTop="0dip"
			android:layout_marginRight="15dip"
		>
		</ImageButton>
    </LinearLayout> 
   </FrameLayout>
   <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="7dip"
    	android:layout_marginRight="7dip"
    	android:layout_marginTop="4dip"
    	android:layout_marginBottom="4dip"
    	android:gravity="center"
    	android:background="@drawable/navigator"
    >
    <TextView
    	android:text="查詢信息" 
    	android:gravity="center"
    	android:textSize="18dip"
    	android:layout_width="100dip" 
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"		
		android:id="@+id/adminmain"
	>
	</TextView>
	<TextView
		android:text="修改密碼"
		android:gravity="center"
		android:layout_height="wrap_content"
		android:layout_width="100dip"
		android:textSize="18dip"
		android:layout_marginRight="10dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:background="@drawable/hilight"
		android:id="@+id/adminmanagement"
	>
	</TextView>
    </LinearLayout>
  <LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffcc66"
	    android:layout_marginLeft="7dip"
    	android:layout_marginRight="7dip"
	    >
	<TextView 
		android:text="管理員名：" 
		android:textColor="#222222"
		android:layout_width="wrap_content"
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
	>
	</TextView>
	 <TextView 
		
		android:textColor="#222222"
		android:layout_width="wrap_content"
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
		android:id="@+id/adminnametextview_mofidy"
	>
	</TextView>
</LinearLayout>
<LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffcc66"
	        	android:layout_marginLeft="7dip"
    	android:layout_marginRight="7dip"
	    >
	<TextView 
		android:text="權限：" 
		android:textColor="#222222"
		android:layout_width="wrap_content"
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
	>
	</TextView>
	<TextView 
		android:textColor="#222222"
		android:layout_width="wrap_content"
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
		android:id="@+id/adminpermittedtextview_mofidy"
	>
	</TextView>
</LinearLayout>
<LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffcc66"
	        	android:layout_marginLeft="7dip"
    	android:layout_marginRight="7dip"
	    >
	<TextView 
		android:text="舊密碼：" 
		android:textColor="#222222"
		android:layout_width="wrap_content"
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
	>
	</TextView>
	<EditText 
		android:layout_width="fill_parent"
		android:layout_height="38dip"
		android:singleLine="true"			
		android:layout_marginTop="4dip"
		android:id="@+id/adminoldpwdedit_mofidy"
	>
	</EditText>
</LinearLayout>
<LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffcc66"
	        	android:layout_marginLeft="7dip"
    	android:layout_marginRight="7dip"
	    >
	<TextView 
		android:text="請輸入新密碼：" 
		android:textColor="#222222"
		android:layout_width="wrap_content"
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
	>
	</TextView>
	<EditText 
		android:layout_width="fill_parent" 
		android:layout_height="38dip"
		android:singleLine="true"			
		android:layout_marginTop="4dip"
		android:id="@+id/adminnewpwdedit_mofidy"
	>
	</EditText>
</LinearLayout>
<LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffcc66"
	        	android:layout_marginLeft="7dip"
    	android:layout_marginRight="7dip"
	    >
	<TextView 
		android:text="請確認密碼：" 
		android:textColor="#222222"
		android:layout_width="wrap_content"
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
	>
	</TextView>
	<EditText 
		android:layout_width="fill_parent"
		android:layout_height="38dip"
		android:singleLine="true"			
		android:layout_marginTop="4dip"
		android:id="@+id/adminnewpwd2edit_mofidy"
	>
	</EditText>
</LinearLayout>
<LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffcc66"
	        	android:layout_marginLeft="7dip"
    	android:layout_marginRight="7dip"
    	android:gravity="right"
	    >
	    <Button
          android:text="修改密碼"
          android:layout_width="wrap_content"
          android:layout_height="40dip"
          android:gravity="right"
          android:id="@+id/modifypwdbok"
        /> 
</LinearLayout>
    <com.bn.lb.admin.GGView
       android:layout_width="fill_parent" 
       android:layout_height="fill_parent" 
       android:layout_marginLeft="7dip"
      android:layout_marginRight="7dip"
    />                     
</LinearLayout>
