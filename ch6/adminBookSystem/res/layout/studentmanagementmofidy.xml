<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:background="#ffffcc"
   >
    <FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="40dip"
    android:background="@drawable/title"
   >
    <TextView
    	android:text="深南大學圖書管理系統"
    	android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="0dip"
		android:layout_marginBottom="0dip"
		android:layout_marginLeft="0dip"
		android:textSize="20dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:gravity="center"
		android:id="@+id/bookmanagementtitle"
    >
    </TextView> 
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" 	
    	android:gravity="center_vertical|right"   	
    >    
	    <ImageButton 
			android:id="@+id/ImageButtonstudentmanagement_modify" 
			android:background="@drawable/next_button"
			android:layout_width="40dip" 
			android:layout_height="30dip"
			android:layout_marginTop="0dip"
			android:layout_marginRight="15dip"
		>
		</ImageButton>
    </LinearLayout>
   </FrameLayout>
     <LinearLayout
	    	android:orientation="horizontal"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="7dip"
	    	android:layout_marginRight="7dip"
	    	android:layout_marginTop="4dip"
	    	android:layout_marginBottom="4dip"
	    	android:gravity="center"
	    	android:background="@drawable/navigator"
	    >
	    <TextView
	    	android:text="查詢結果" 
	    	android:gravity="center"
	    	android:textSize="18dip"
	    	android:layout_width="100dip" 
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dip"
			android:textColor="#FFFFFF"
			android:textStyle="bold"
			
		>
		</TextView>
		<TextView
			android:text="修改信息"
			android:gravity="center"
			android:layout_height="wrap_content"
			android:layout_width="100dip"
			android:textSize="18dip"
			android:layout_marginRight="10dip"
			android:textColor="#FFFFFF"
			android:textStyle="bold"
			android:background="@drawable/hilight"
		>
		</TextView>
	</LinearLayout>
	
	<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffcc66"
        android:layout_marginLeft="7dip"
	    android:layout_marginRight="7dip"

        >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        >
        <TextView
		android:text="學號:" 
		android:textColor="#222222"
		android:layout_width="wrap_content"
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
		android:gravity="center_vertical"
		>
		</TextView>
		<EditText
             android:text=""
             android:id="@+id/modify_studentmanagementnumberedit"
             android:textColor="#222222"
             android:layout_width="80dip"
             android:layout_height="38dip"
             android:textSize="16dip"
        >
        </EditText>
         <TextView
		android:text="姓名:" 
		android:textColor="#222222"
		android:layout_width="wrap_content"
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
		android:gravity="center_vertical"
		>
		</TextView>
		<EditText
             android:text=""
             android:id="@+id/modify_studentmanagementnameedit"
             android:textColor="#222222"
            android:layout_width="fill_parent"
             android:layout_height="38dip"
             android:textSize="16dip"
        >
        </EditText>
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        >
        <TextView
		android:text="性別:" 
		android:textColor="#222222"
		android:layout_width="wrap_content"
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
		android:gravity="center_vertical"
		>	
		</TextView>
		<EditText
             android:text=""
             android:id="@+id/modify_studentmanagementxingbieedit"
             android:textColor="#222222"
            android:layout_width="80dip"
             android:layout_height="38dip"
             android:textSize="16dip"
        >
        </EditText>
        <TextView
		android:text="借書權限:" 
		android:textColor="#222222"
		android:layout_width="wrap_content"
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
		android:gravity="center_vertical"
		>	
		</TextView>
		<EditText
             android:text=""
             android:id="@+id/modify_studentmanagementquanxianedit"
             android:textColor="#222222"
             android:layout_width="fill_parent"
             android:layout_height="38dip"
             android:textSize="16dip"
        >
        </EditText>
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        >
        <TextView
		android:text="年齡:" 
		android:textColor="#222222"
		android:layout_width="wrap_content"
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
		android:gravity="center_vertical"
		>	
		</TextView>
		<EditText
             android:text=""
             android:id="@+id/modify_studentmanagementageedit"
             android:textColor="#222222"
            android:layout_width="80dip"
             android:layout_height="38dip"
             android:textSize="16dip"
        >
        </EditText>
        <TextView
		android:text="電話:" 
		android:textColor="#222222"
		android:layout_width="wrap_content"
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
		android:gravity="center_vertical"
		>	
		</TextView>
		<EditText
             android:text=""
             android:id="@+id/modify_studentmanagementteledit"
             android:textColor="#222222"
             android:layout_width="fill_parent"
             android:layout_height="38dip"
             android:textSize="16dip"
        >
        </EditText>
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
		android:text="班級:" 
		android:textColor="#222222"
		android:layout_width="wrap_content"
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
		android:gravity="center_vertical"
		>
		</TextView>
		<EditText
             android:text=""
             android:id="@+id/modify_studentmanagementclassedit"
             android:textColor="#222222"
             android:layout_width="fill_parent"
             android:layout_height="38dip"
             android:textSize="16dip"
        >
        </EditText>
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
		android:text="院系:" 
		android:textColor="#222222"
		android:layout_width="wrap_content"
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
		android:gravity="center_vertical"
		>
		</TextView>
		<EditText
             android:text=""
             android:id="@+id/modify_studentmanagementxueyuanedit"
             android:textColor="#222222"
             android:layout_width="fill_parent"
             android:layout_height="38dip"
             android:textSize="16dip"
        >
        </EditText>
        </LinearLayout>
        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
     
        >
        <TextView
		android:text="密碼:" 
		android:textColor="#222222"
		android:layout_width="wrap_content"
		android:layout_height="20dip"
		android:layout_marginLeft="5dip"
		android:textSize="18dip"
		android:gravity="center_vertical"
		>
		</TextView>
		<EditText
             android:text=""
             android:id="@+id/modify_studentmanagementpasswordedit"
             android:textColor="#222222"
             android:layout_width="fill_parent"
             android:layout_height="38dip"
             android:textSize="16dip"
        >
        </EditText>
        </LinearLayout>
       <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:gravity="right"
        >
        <Button
          android:text="修改信息"
          android:layout_width="80dip"
          android:layout_height="40dip"        
          android:id="@+id/buttonstudentmanagement_modifystu"
        />    
    </LinearLayout>  
</LinearLayout>    
</LinearLayout>
