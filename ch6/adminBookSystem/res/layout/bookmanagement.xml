<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#ffffcc"
  >
  <FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="40dip"
    android:background="@drawable/title"
   >
    <TextView
    	android:text="深南大學圖書管理系統"
    	android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="0dip"
		android:layout_marginBottom="0dip"
		android:layout_marginLeft="0dip"
		android:textSize="20dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:gravity="center"
		android:id="@+id/bookmanagementtitle"
    >
    </TextView> 
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" 	
    	android:gravity="center_vertical|right"   	
    >    
	    <ImageButton 
			android:id="@+id/ImageButtonbookmanagement02" 
			android:background="@drawable/next_button"
			android:layout_width="40dip" 
			android:layout_height="30dip"
			android:layout_marginTop="0dip"
			android:layout_marginRight="15dip"
		>
		</ImageButton>
    </LinearLayout>
   </FrameLayout>
    <LinearLayout
	    	android:orientation="horizontal"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="7dip"
	    	android:layout_marginRight="7dip"
	    	android:layout_marginTop="4dip"
	    	android:layout_marginBottom="4dip"
	    	android:gravity="center"
	    	android:background="@drawable/navigator"
	    >
	    <TextView
	    	android:text="圖書入庫" 
	    	android:gravity="center"
	    	android:textSize="18dip"
	    	android:layout_width="100dip" 
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dip"
			android:textColor="#FFFFFF"
			android:textStyle="bold"
			
		>
		</TextView>
		<TextView
			android:text="圖書內容"
			android:gravity="center"
			android:layout_height="wrap_content"
			android:layout_width="100dip"
			android:textSize="18dip"
			android:layout_marginRight="10dip"
			android:textColor="#FFFFFF"
			android:textStyle="bold"
			android:background="@drawable/hilight"
		>
		</TextView>
	    </LinearLayout>
  <LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffcc66"
	    android:layout_marginLeft="7dip"
	    	android:layout_marginRight="7dip"

	    >
        <TextView 
		android:text="ISBN：" 
		android:id="@+id/bookisbn" 
		android:textColor="#222222"
		android:layout_width="wrap_content" 
		android:layout_height="30dip"
		android:layout_marginTop="4dip"
		android:layout_marginLeft="4dip"
		android:textSize="12dip"
	>
	</TextView>
	<EditText 
		android:text=""
		android:id="@+id/bookisbnedit" 
		android:layout_width="120dip"
		android:layout_height="32dip"
		android:singleLine="true"			
		android:layout_marginTop="4dip"
		android:textSize="12dip"
	>
	</EditText>
	 <TextView 
		android:text="購買日期" 
		android:id="@+id/bookbuytime" 
		android:textColor="#222222"
		android:layout_width="wrap_content" 
		android:layout_height="30dip"
		android:layout_marginTop="4dip"
		android:layout_marginLeft="4dip"
		android:textSize="12dip"
	>
	</TextView>
	<EditText  
		android:text=""
		android:id="@+id/bookbuttimeedit" 
		android:layout_width="fill_parent"
		android:layout_height="32dip"	
		android:editable="false"
		android:cursorVisible="false"		
		android:layout_marginTop="4dip"
		android:textSize="12dip"
		android:textColor="#000000"
	>
	</EditText>
</LinearLayout>

	    <LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffcc66"
	    android:layout_marginLeft="7dip"
	    	android:layout_marginRight="7dip"
	    >
	    <TextView 
		android:text="書名：" 
		android:id="@+id/bookname" 
		android:textColor="#222222"
		android:layout_width="wrap_content" 
		android:layout_height="30dip"
		android:layout_marginTop="4dip"
		android:layout_marginLeft="5dip"
		android:textSize="12dip"
	    >
	    </TextView>
	    <EditText 
		android:text=""
		android:id="@+id/booknameedit" 
		android:layout_width="fill_parent"
		android:layout_height="32dip"
		android:singleLine="true"			
		android:layout_marginTop="4dip"
		android:textSize="12dip"
	    >
	</EditText>
</LinearLayout>

	    <LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffcc66"
	    android:layout_marginLeft="7dip"
	    	android:layout_marginRight="7dip"

	    >
	    <TextView 
		android:text="作者：" 
		android:id="@+id/bookauthor" 
		android:textColor="#222222"
		android:layout_width="wrap_content" 
		android:layout_height="30dip"
		android:layout_marginTop="4dip"
		android:layout_marginLeft="4dip"
		android:textSize="12dip"
	    >
	    </TextView>
	    <EditText 
		android:text=""
		android:id="@+id/bookauthoredit" 
		android:layout_width="fill_parent"
		android:layout_height="32dip"
		android:singleLine="true"			
		android:layout_marginTop="4dip"
		android:textSize="12dip"
	    >
	</EditText>
	    </LinearLayout>
	
<LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffcc66"
	    android:layout_marginLeft="7dip"
	    	android:layout_marginRight="7dip"

	    >
	    <TextView 
		android:text="出版社：" 
		android:id="@+id/bookpress" 
		android:textColor="#222222"
		android:layout_width="wrap_content" 
		android:layout_height="30dip"
		android:layout_marginTop="4dip"
		android:layout_marginLeft="5dip"
		android:textSize="12dip"
	    >
	    </TextView>
	 <EditText 
		android:text=""
		android:id="@+id/bookpressedit" 
		android:layout_width="fill_parent"
		android:layout_height="32dip"
		android:singleLine="true"			
		android:layout_marginTop="4dip"
		android:textSize="12dip"
	    >
	</EditText>
	    </LinearLayout>
	  <LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffcc66"
	    android:layout_marginLeft="7dip"
	    	android:layout_marginRight="7dip"

	   >
	     <TextView 
		android:text="已借閱：" 
        android:textColor="#222222"
		android:layout_width="wrap_content" 
		android:layout_height="30dip"
		android:layout_marginTop="10dip"
		android:layout_marginLeft="5dip"
		android:textSize="12dip"
	    >
	    </TextView>
	        <Spinner 
                 android:id="@+id/jieyueSpinner01" 
                 android:layout_width="100dip"
                 android:layout_height="35dip"
                 android:layout_marginTop="10dip"
                 android:minWidth="80px"                                                                              
                 >    
              </Spinner>
    <TextView 
		android:text="已預約：" 
        android:textColor="#222222"
		android:layout_width="wrap_content" 
		android:layout_height="30dip"
		android:layout_marginTop="10dip"
		android:layout_marginLeft="5dip"
		android:textSize="12dip"
	    >
	 </TextView>
	 <Spinner 
       android:id="@+id/yuyueSpinner01" 
       android:layout_width="100dip"
       android:layout_height="35dip"
       android:layout_marginTop="10dip"
       android:minWidth="80px"                                                                              
        >    
     </Spinner>
	    </LinearLayout>
	 <LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffcc66"
	    android:layout_marginLeft="7dip"
	    	android:layout_marginRight="7dip"

	 >
           <TextView 
		android:text="簡介：" 
        android:textColor="#222222"
		android:layout_width="wrap_content" 
		android:layout_height="30dip"
		android:layout_marginTop="10dip"
		android:layout_marginLeft="5dip"
		android:textSize="12dip"
	    >
	 </TextView>
	 <EditText 
		android:text=""
		android:id="@+id/bookinstroductionedit" 
		android:layout_width="fill_parent"
		android:layout_height="32dip"
		android:layout_marginTop="10dip"
		android:singleLine="false"		
        android:textSize="12dip"
	    >
	</EditText> 
	 </LinearLayout>
	 <LinearLayout
		android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffcc66"
	     android:gravity="right"    
	    android:layout_marginLeft="7dip"
	    	android:layout_marginRight="7dip"

	    >
	    
         <Button
          android:text="確定"
          android:layout_width="80dip"
          android:layout_height="40dip"        
          android:id="@+id/insertbookbok"
        /> 
   </LinearLayout>      
</LinearLayout>
