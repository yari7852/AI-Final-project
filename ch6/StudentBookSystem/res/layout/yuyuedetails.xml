<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffcc"
   >
    <FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="40dip"
    android:background="@drawable/title"
   >
    <TextView
    	android:text="深南大學圖書管理系統"
    	android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="0dip"
		android:layout_marginBottom="0dip"
		android:layout_marginLeft="0dip"
		android:textSize="20dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:gravity="center"
    >
    </TextView> 
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" 	
    	android:gravity="center_vertical|right"   	
    >    
	    <ImageButton 
			android:id="@+id/ImageButtonyuyue_details01" 
			android:background="@drawable/next_button"
			android:layout_width="40dip" 
			android:layout_height="30dip"
			android:layout_marginTop="0dip"
			android:layout_marginRight="15dip"
		>
		</ImageButton>
    </LinearLayout>
   </FrameLayout>
   <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_marginLeft="7dip"
      android:layout_marginRight="7dip"
      android:layout_marginTop="4dip"
      android:layout_marginBottom="4dip"
      android:background="@drawable/navigator"
    >      
      <TextView
         android:text="預約查詢"
         android:layout_height="wrap_content"
         android:layout_width="100dip"          
         android:textSize="18dip"
		 android:layout_marginLeft="10dip"
		 android:textColor="#FFFFFF"
		 android:gravity="center"
		 
       />
       <TextView
         android:text="詳細信息"
         android:layout_width="100dip"
         android:layout_height="wrap_content"         
         android:textSize="18dip"
         android:gravity="center"
         android:textColor="#FFFFFF"
         android:background="@drawable/hilight"
        />       
    </LinearLayout>
    <LinearLayout
       android:orientation="vertical"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background="#ffcc66"
       >
         <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dip"
            android:layout_marginRight="7dip"
          >
             <TextView
                android:text="書號"
                android:textSize="15dip"
                android:textColor="#000000"
                android:layout_width="43dip"
                android:layout_height="wrap_content"
                android:paddingLeft="0dip"
             />
             <TextView
                android:id="@+id/TextVieworderdetails01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:textColor="#000000"
             ></TextView>
             </LinearLayout> 
             <LinearLayout
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="7dip"
              android:layout_marginRight="7dip"
              >
             <TextView
                android:text="ISBN"
                android:textSize="15dip"                
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              ></TextView>
              <TextView
                android:textSize="14dip"
                android:id="@+id/TextVieworderdetails02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                
              ></TextView>
           </LinearLayout>  
          
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="7dip"
              android:layout_marginRight="7dip"
           >
              <TextView
                 android:text="書名"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingLeft="0dip"
                 android:textSize="15dip"
                 android:textColor="#000000"
               ></TextView>
               <TextView
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:textSize="14dip"
                 android:textColor="#000000"
                 android:id="@+id/TextVieworderdetails03"
                 
               ></TextView>
           </LinearLayout> 
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="7dip"
              android:layout_marginRight="7dip"
           >
              <TextView
                 android:text="作者"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingLeft="0dip"
                 android:textSize="15dip"
                 android:textColor="#000000"
               ></TextView>
               <TextView
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:textSize="14dip"
                 android:textColor="#000000"
                 android:id="@+id/TextVieworderdetails04"                
               ></TextView>
           </LinearLayout> 
           <LinearLayout
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="7dip"
              android:layout_marginRight="7dip"
           >
              <TextView
                 android:text="出版社"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingLeft="0dip"
                 android:textSize="15dip"
                 android:textColor="#000000"
               ></TextView>
               <TextView
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:textSize="14dip"
                 android:textColor="#000000"
                 android:id="@+id/TextVieworderdetails05"
                 
               ></TextView>
           </LinearLayout>            
           <LinearLayout
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"  
              android:layout_marginLeft="7dip"
              android:layout_marginRight="7dip"            
            >
               <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:text="本書簡介："
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dip"                      
                    android:textColor="#000000" 
                 ></TextView> 
                 <TextView
                    android:textSize="14dip"
                    android:textColor="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextVieworderdetails06"
                 ></TextView>
              </FrameLayout> 
              </LinearLayout>
              <LinearLayout
                 android:id="@+id/yuyuedetailsLinear"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:visibility="visible"
                 android:orientation="vertical"
                 android:layout_marginLeft="7dip"
                 android:layout_marginRight="7dip"
              >
                  <TextView
                     android:text="預約提醒！"
                     android:textColor="#ee070e"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="17dip"
                  ></TextView>
                  <TextView
                     android:text="您要預約的圖書沒有被借閱，隨時可以到圖書館查看借閱！"
                     android:textColor="#ee070e"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="17dip"
                     android:layout_marginBottom="10dip"
                  ></TextView>
                    
              </LinearLayout>
           </LinearLayout>
           <LinearLayout
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="right"
              android:layout_marginTop="15dip"
           >
              <Button
                android:id="@+id/yuyueReturn"
                android:layout_width="80dip"
                android:layout_height="40dip"
                android:text="返回"
                android:textColor="#000000"
                android:layout_marginRight="7px"
                android:layout_marginTop="5dip"
                
            ></Button>
           </LinearLayout>   
           
                                    
             
    
</LinearLayout>

