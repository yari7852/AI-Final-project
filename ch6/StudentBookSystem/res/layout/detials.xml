<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffcc"
   >
    <FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="40dip"
    android:background="@drawable/title"
   >
    <TextView
    	android:text="深南大學圖書管理系統"
    	android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="0dip"
		android:layout_marginBottom="0dip"
		android:layout_marginLeft="0dip"
		android:textSize="20dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:gravity="center"
    >
    </TextView> 
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" 	
    	android:gravity="center_vertical|right"   	
    >    
	    <ImageButton 
			android:id="@+id/ImageButtonquery_details01" 
			android:background="@drawable/next_button"
			android:layout_width="40dip" 
			android:layout_height="30dip"
			android:layout_marginTop="0dip"
			android:layout_marginRight="15dip"
		>
		</ImageButton>
    </LinearLayout>
   </FrameLayout>
   <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_marginLeft="4dip"
      android:layout_marginRight="4dip"
      android:layout_marginTop="4dip"
      android:layout_marginBottom="4dip"
      android:background="@drawable/navigator"
    >      
      <TextView
         android:text="查詢結果"
         android:layout_height="wrap_content"
         android:layout_width="100dip"          
         android:textSize="18dip"
		 android:layout_marginLeft="10dip"
		 android:textColor="#FFFFFF"
		 android:gravity="center"
		 
       />
       <TextView
         android:text="詳細資訊"
         android:layout_width="100dip"
         android:layout_height="wrap_content"         
         android:textSize="18dip"
         android:gravity="center"
         android:textColor="#FFFFFF"
         android:background="@drawable/hilight"
        />       
    </LinearLayout>
    <LinearLayout
       android:orientation="vertical"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background="#ffcc66"
       >
         <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dip"
            android:layout_marginLeft="7dip" 
          >
             <TextView
                android:text="ISBN"
                android:textSize="15dip"
                android:textColor="#000000"
                android:layout_width="43dip"
                android:layout_height="wrap_content"
                android:paddingLeft="0dip"
             />
             <TextView
                android:id="@+id/TextViewdetails01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:textColor="#000000"
             ></TextView>
             <TextView
                android:text="本館收藏"
                android:textSize="15dip"
                android:paddingLeft="10dip"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              ></TextView>
              <TextView
                android:textSize="14dip"
                android:id="@+id/TextViewdetails02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
              ></TextView>
                
          </LinearLayout> 
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginRight="7dip"
              android:layout_marginLeft="7dip" 
           >
              <TextView
                 android:text="書名"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingLeft="0dip"
                 android:textSize="15dip"
                 android:textColor="#000000"
               ></TextView>
               <TextView
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:textSize="14dip"
                 android:textColor="#000000"
                 android:id="@+id/TextViewdetails03"
                 android:paddingLeft="5dip"
               ></TextView>
           </LinearLayout> 
          <LinearLayout
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginRight="7dip"
              android:layout_marginLeft="7dip" 
           >
              <TextView
                 android:text="作者"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingLeft="0dip"
                 android:textSize="15dip"
                 android:textColor="#000000"
               ></TextView>
               <TextView
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:textSize="14dip"
                 android:textColor="#000000"
                 android:id="@+id/TextViewdetails04"
                 android:paddingLeft="5dip"
               ></TextView>
           </LinearLayout> 
           <LinearLayout
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginRight="7dip"
              android:layout_marginLeft="7dip" 
           >
              <TextView
                 android:text="出版社"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingLeft="0dip"
                 android:textSize="15dip"
                 android:textColor="#000000"
               ></TextView>
               <TextView
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:textSize="14dip"
                 android:textColor="#000000"
                 android:id="@+id/TextViewdetails05"
                 android:paddingLeft="5dip"
               ></TextView>
           </LinearLayout>            
           <LinearLayout
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" 
              android:layout_marginRight="7dip"
              android:layout_marginLeft="7dip"              
            >
               <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:text="本書簡介："
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dip"                      
                    android:textColor="#000000" 
                 ></TextView> 
                 <TextView
                    android:textSize="14dip"
                    android:textColor="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TextViewdetails06"
                 ></TextView>
              </FrameLayout> 
              </LinearLayout>
             </LinearLayout>                         
              <LinearLayout
                 android:orientation="horizontal"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:gravity="center" 
                 android:layout_marginRight="7dip"
                 android:layout_marginLeft="7dip"      
              >
                <TextView
               android:text="書號"
               android:textSize="16dip"
               android:layout_width="100px"
               android:layout_height="wrap_content"              
               android:textColor="#000000">
            </TextView>                   
            <TextView
               android:text="是否借閱"
               android:textSize="16dip"
               android:layout_width="100px"
               android:layout_height="wrap_content"
               android:paddingLeft="5dip"
               android:textColor="#000000">
            </TextView>
            <TextView
               android:text="是否預約"
               android:textSize="16dip"
               android:layout_width="100px"
               android:layout_height="wrap_content"
               android:paddingLeft="5dip"
               android:textColor="#000000">
            </TextView> 
                                    
       </LinearLayout>       
          <GridView 
              android:id="@+id/GridViewdetails01" 
              android:layout_width="fill_parent" 
              android:layout_height="fill_parent"
              android:verticalSpacing="7dip"
              android:horizontalSpacing="7dip"
              android:stretchMode="columnWidth" 
                        
          ></GridView>
    
</LinearLayout>
